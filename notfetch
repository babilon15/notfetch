def get_hostname():
	try:
		fo = open('/etc/hostname')
		return fo.readline().rstrip()
	except FileNotFoundError:
		return '(unknown)'
	finally:
		fo.close()

def get_os_pretty_name():
	try:
		fo = open('/etc/os-release')
	except FileNotFoundError:
		return '(unknown)'
	exists = False
	for line in fo:
		if 'PRETTY_NAME' in line:
			exists = True
			break
	fo.close()
	if exists:
		first_qmark = line.find('"')
		last_qmark = line.rfind('"')
		return line[first_qmark+1:last_qmark]
	return '(unknown)'

def get_linux_version():
	out = subprocess.check_output(['uname', '-r'])
	out = out.decode('utf-8')
	return out.rstrip()

